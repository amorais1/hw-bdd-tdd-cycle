-#  This file is app/views/movies/same_director.html.haml
%h1 Movies with same directors

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th Director
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td=movie.director
        %td= link_to "Learn more about #{movie.title}", movie_path(movie)